{
  "version_patterns": {
    "docker_tag": "{VERSION_WITH_V}",
    "url_version": "@{VERSION}",
    "npm_version": "{VERSION_NO_V}",
    "full_version": "{VERSION}",
    "changelog_version": "{VERSION_NO_V}"
  },
  
  "files": [
    {
      "name": "Forms Flow Admin Package",
      "path": "forms-flow-admin/package.json",
      "updates": [
        {
          "description": "Admin micro-frontend version",
          "find": "ff_json_version_pattern",
          "replace": "\"version\": \"{{npm_version}}\"",
          "type": "regex"
        }
      ]
    },
    {
      "name": "Forms Flow Admin Package Lock",
      "path": "forms-flow-admin/package-lock.json",
      "updates": [
        {
          "description": "Admin package-lock.json root version",
          "find": "ff_json_version_pattern",
          "replace": "\"version\": \"{{npm_version}}\"",
          "type": "regex",
          "context": {
            "near": "\"name\": \"@formsflow/admin\"",
            "max_matches": 2
          }
        }
      ]
    },
